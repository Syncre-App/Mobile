{
  "expo": {
    "name": "Syncre",
    "slug": "syncre",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "syncre",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.syncre.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Syncre uses Face ID to securely unlock your messages.",
        "NSCameraUsageDescription": "Syncre needs camera access to take photos for your profile and chat.",
        "NSPhotoLibraryUsageDescription": "Syncre needs photo library access to share photos in chat.",
        "NSMicrophoneUsageDescription": "Syncre needs microphone access to record voice messages.",
        "UIBackgroundModes": [
          "remote-notification"
        ]
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.syncre.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED"
      ]
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://syncre.xyz"
        }
      ],
      [
        "expo-secure-store",
        {
          "faceIDPermission": "Allow Syncre to access your Face ID to unlock the app securely."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Syncre to use Face ID for quick and secure app unlock."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#000000"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Syncre to access your photos to share in conversations.",
          "cameraPermission": "Allow Syncre to take photos for your profile and chat."
        }
      ],
      "expo-sqlite",
      "expo-font",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#000000",
          "image": "./assets/splash-icon.png",
          "imageWidth": 200
        }
      ],
      "expo-web-browser"
    ],
    "extra": {
      "router": {
        "origin": "https://syncre.xyz"
      },
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ]
  }
}
